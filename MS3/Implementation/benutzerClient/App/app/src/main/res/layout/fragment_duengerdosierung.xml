<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eis1617.muellerkimmeyer.app.DuengerdosierungFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout">

                <TextView
                    android:text="@string/duengerdosierung_info"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/infoIcon"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_width="335dp"
                    android:id="@+id/tvInfo"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_info_details"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/infoIcon"/>
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativeLayout"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Nettowasservolumen im Aquarium:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:id="@+id/tvVolumenAquarium" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/llVolumenAquarium">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="in Liter"
                        android:ems="10"
                        android:id="@+id/etVolumenAquarium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in Liter"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvEinheitVolumen"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </View>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@android:drawable/ic_dialog_info"
                        android:tint="@color/colorPrimary"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:id="@+id/ivVolumenAquariumInfo"/>

                </LinearLayout>

                <TextView
                    android:text="Konzentration des N채hrstoffs im Aquarium:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tvKonzentrationAquarium" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/llKonzentrationAquarium">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="in mg/l"
                        android:ems="10"
                        android:id="@+id/etKonzentrationAquarium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in mg/l"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvKonzentrationAquariumEinheit"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </View>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@android:drawable/ic_dialog_info"
                        android:tint="@color/colorPrimary"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:id="@+id/ivKonzentrationAquariumInfo"/>

                </LinearLayout>

                <TextView
                    android:text="Konzentration des N채hrstoffs im D체nger:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tvKonzentrationDuenger" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/llKonzentrationDuenger">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="in mg/l"
                        android:ems="10"
                        android:id="@+id/etKonzentrationDuenger"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in mg/l"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvKonzentrationDuengerEinheit"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </View>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@android:drawable/ic_dialog_info"
                        android:tint="@color/colorPrimary"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:id="@+id/ivKonzentrationDuengerInfo"/>

                </LinearLayout>

                <TextView
                    android:text="Gew체nschte Konzentration im Aquarium:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tvGewuenschteKonzentration" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/llGewuenschteKonzentration">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="in mg/l"
                        android:ems="10"
                        android:id="@+id/etGewuenschteKonzentration"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in mg/l"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvGewuenschteKonzentrationEinheit"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </View>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@android:drawable/ic_dialog_info"
                        android:tint="@color/colorPrimary"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:id="@+id/ivGewuenschteKonzentrationInfo"/>

                </LinearLayout>



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Berechnen"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:id="@+id/btnDuengerdosierungBerechnen"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
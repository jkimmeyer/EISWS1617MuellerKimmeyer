<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eis1617.muellerkimmeyer.app.fragmente.WasserwechselFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout">


                <TextView
                    android:text="@string/wasserwechsel_info"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/infoIcon"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_width="335dp"
                    android:id="@+id/tvInfo"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_info_details"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/infoIcon"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativeLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Nettowasservolumen im Aquarium:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="11dp"
                    android:id="@+id/tvVolumenAquarium" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvVolumenAquarium"
                    android:layout_marginTop="10dp"
                    android:id="@+id/llVolumenAquarium">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="in Liter"
                        android:ems="10"
                        android:id="@+id/etVolumenAquarium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in Liter"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvEinheitVolumen"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </View>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@android:drawable/ic_dialog_info"
                        android:tint="@color/colorPrimary"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:id="@+id/ivVolumenAquariumInfo"/>

                </LinearLayout>

                <TextView
                    android:text="Gew체nschte Wasserwechselmenge:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/llVolumenAquarium"
                    android:id="@+id/tvGewuenschteMenge" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvGewuenschteMenge"
                    android:layout_marginTop="10dp"
                    android:id="@+id/llGewuenschteMenge">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="in Liter"
                        android:ems="10"
                        android:id="@+id/etGewuenschteMenge"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in Liter"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvGewuenschteMengeEinheit"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </View>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@android:drawable/ic_dialog_info"
                        android:tint="@color/colorPrimary"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:id="@+id/ivGewuenschteMengeInfo"/>

                </LinearLayout>

                <TextView
                    android:text="KH / GH des Leitungswassers:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/llGewuenschteMenge"
                    android:id="@+id/tvKhGhLw" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvKhGhLw"
                    android:layout_marginTop="10dp"
                    android:id="@+id/llKhGhLw">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="in dH째"
                        android:ems="10"
                        android:id="@+id/etKhGhLw"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in dH째"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvKhGhLwEinheit"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </View>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@android:drawable/ic_dialog_info"
                        android:tint="@color/colorPrimary"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:id="@+id/ivKhGhLwInfo"/>

                </LinearLayout>

                <TextView
                    android:text="KH / GH im Aquarium:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/llKhGhLw"
                    android:id="@+id/tvKhGhAq" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvKhGhAq"
                    android:layout_marginTop="10dp"
                    android:id="@+id/llKhGhAq">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="in dH째"
                        android:ems="10"
                        android:id="@+id/etKhGhAq"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in dH째"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvKhGhAqEinheit"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </View>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@android:drawable/ic_dialog_info"
                        android:tint="@color/colorPrimary"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:id="@+id/ivKhGhAqInfo"/>

                </LinearLayout>

                <TextView
                    android:text="Gew체nschte KH / GH:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/llKhGhAq"
                    android:id="@+id/tvGewuenschteKhGh" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvGewuenschteKhGh"
                    android:layout_marginTop="10dp"
                    android:id="@+id/llGewuenschteKhGh">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="in dH째"
                        android:ems="10"
                        android:id="@+id/etGewuenschteKhGh"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in dH째"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvGewuenschteKhGhEinheit"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </View>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@android:drawable/ic_dialog_info"
                        android:tint="@color/colorPrimary"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:id="@+id/ivGewuenschteKhGhInfo"/>

                </LinearLayout>

                <TextView
                    android:text="Wirkungsgrad Reinwassererzeugung:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/llGewuenschteKhGh"
                    android:id="@+id/tvWirkungsgradRE" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvWirkungsgradRE"
                    android:layout_marginTop="10dp"
                    android:id="@+id/llWirkungsgradRE">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="in %"
                        android:ems="10"
                        android:id="@+id/etWirkungsgradRE"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in %"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tvWirkungsgradREEinheit"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </View>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@android:drawable/ic_dialog_info"
                        android:tint="@color/colorPrimary"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:id="@+id/ivWirkungsgradREInfo"/>

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llWirkungsgradRE"
                    android:text="Berechnen"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:id="@+id/btnWasserwechselBerechnen"/>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
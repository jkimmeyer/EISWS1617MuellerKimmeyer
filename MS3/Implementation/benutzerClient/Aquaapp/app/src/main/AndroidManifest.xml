<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.eis.muellerkimmeyer.aquaapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <uses-permission android:name="android.permission.INTERNET" />

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".DokumentationActivity"
            android:label="@string/title_activity_dokumentation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProblemeActivity"
            android:label="@string/title_activity_probleme"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PflegeActivity"
            android:label="@string/title_activity_pflege"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>